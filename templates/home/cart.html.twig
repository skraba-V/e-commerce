{% extends 'base.html.twig' %}
{% block stylesheets %}
     <link rel="stylesheet" href="{{asset('style.css')}}">
{% endblock %}
{% block title %}Cart index{% endblock %}
{% block head %}



{% endblock %}

{% block body %}
     <link rel="stylesheet" href="{{asset('cart.css')}}">

   <body>
    <div class="card mt-5 mb-5">
        <div class="row">
            <div class="col-md-8 cart mt-5">
                <div class="title">
                    <div class="row">
                        <div class="col">
                            <h4><b>Shopping Cart</b></h4>
                        </div>
                        <div class="col align-self-center text-right text-muted" style="margin-left: 5px;"></div>
                    </div>
                </div>
                 {% for item in items %}
                <div class="row border-top border-bottom">
                    <div class="row main align-items-center">
                        <div class="col-2"><img id="cartimage" class="img-fluid" src="{{asset('pictures/'~ item.fkProductId.picture)}}"></div>
                        <div class="col">
                            <div class="row text-muted">{{item.fkProductId.name}}</div>
                            <div class="row">{{item.amount}}</div>
                            <div class="row">{{ item.fkProductId.price * item.amount }} ({{ item.fkProductId.price }})</div>
                        </div>
                        <a class="btn" href="{{ path('app_cart_delete', {'id': item.id}) }}">delete</a>
                        <div class="col">&euro;{{ item.fkProductId.price}}  <span class="close">&#10005;</span></div>
                    </div>
                </div>
                {% else %}
                    <div class="row border-top border-bottom">
                    <div class="row main align-items-center">
                        <div class="row">no records found</div>
                        <div class="col">
                            
                        </div>
                      
                    </div>
                </div>
                {% endfor %}
              
                
                <div class="back-to-shop"><a href="{{ path('app_homeproducts') }}">&leftarrow;</a><span class="text-muted">Back to shop</span></div>
            </div>
            <div class="col-md-4 summary ">
                <div>
                    <h5><b>Summary</b></h5>
                </div>
                <hr>
                <div class="row">
                    <div class="col" style="padding-left:1;"></div>
                    <div class="col text-right">&euro; </div>
                </div>
                <form class="form">
                    <p class="fs-5">SHIPPING</p>
                    <p class="fs-5">Standard-Delivery</p>


                </form>
                <div class="row" style="border-top: 1px solid rgba(0,0,0,.1); padding: 10vh 0;">
                    <div class="col">TOTAL PRICE</div>
                    <div class="col text-right">{{ total }}â‚¬</div>
                </div> <a href="{{ path('app_cart_order') }}"><button class="btn1">CHECKOUT</button></a>
            </div>
        </div>
    </div>
{% block script %}
 <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js" integrity="sha512-bLT0Qm9VnAYZDflyKcBaQ2gg0hSYNQrJ8RilYldYQ1FxQYoCLtUjuuRuZo+fjqhx/qtq/1itJ0C2ejDxltZVFg==" crossorigin="anonymous"></script>

{% endblock %}
   
</body>

{% endblock %}
